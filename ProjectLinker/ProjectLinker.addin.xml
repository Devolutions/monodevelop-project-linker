<?xml version="1.0" encoding="utf-8" ?>
<Addin namespace="ProjectLinker"
	id="ProjectLinker"
	name="Project linker"
	author="Rafael Steil"
	copyright="MIT"
	url="http://rafaelsteil.com"
	description="Automatically link files from one project onto another"
	category="Project Extensions"
	version="1.0">

	<Runtime>
		<Import assembly="ProjectLinker.dll"/>
	</Runtime>

	<Dependencies>
		<Addin id="::MonoDevelop.Ide" version="4.0"/>
		<Addin id="::MonoDevelop.Core" version="4.0"/>
	</Dependencies>

	<Extension path="/MonoDevelop/Ide/Commands">
		<Command id="ProjectLinker.LinkProject" _label="Link projects" _description="Set this project as source for linking with other projects" defaultHandler="ProjectLinker.LinkProjectHandler"/>
	</Extension>

	<Extension path="/MonoDevelop/Ide/MainMenu/Project">
		<CommandItem id="ProjectLinker.LinkProject"  />
	</Extension>
</Addin>
